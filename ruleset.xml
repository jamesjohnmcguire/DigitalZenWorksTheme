<?xml version="1.0"?>
<ruleset name="Digital Zen Theme Coding Standard"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/WordPress-Coding-Standards/WordPress-Coding-Standards/refs/heads/develop/WordPress-Coding-Standards/ruleset.xsd">

	<config name="testVersion" value="7.4-"/>
	<config name="minimum_supported_wp_version" value="4.5"/>

 	<rule ref="./ruleset.default.xml"/>
 	<rule ref="./ruleset.wordpress.xml"/>

	<rule ref="PEAR">
		<exclude name="PEAR.Commenting.FileComment.MissingLicenseTag"/>
	</rule>

	<rule ref="PHPCompatibility"/>

	<rule ref="Squiz">
		<exclude name="Squiz.Classes.ClassDeclaration.SpaceBeforeCloseBrace"/>
	</rule>

</ruleset>
