# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Files that don't have an extension
[DevelopmentTools/*]
end_of_line = lf

[DevelopmentTools/*.cmd]
end_of_line = crlf

[*.{css,js,php}]
indent_size = 4
indent_style = tab

[*.{php,scss,sh}]
end_of_line = lf

[*.html]
indent_size = 2
indent_style = space
