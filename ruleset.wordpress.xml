<?xml version="1.0"?>
<ruleset name="Digital Zen Works WordPress Standard"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/WordPress-Coding-Standards/WordPress-Coding-Standards/refs/heads/develop/WordPress-Coding-Standards/ruleset.xsd">

	<config name="minimum_supported_wp_version" value="4.5"/>

	<description>The set of WordPress code standard rules for Digital Zen Works.</description>

 	<rule ref="./ruleset.default.xml"/>

	<rule ref="Squiz">
		<!--WordPress Override-->
		<exclude name="Squiz.Arrays.ArrayBracketSpacing.SpaceAfterBracket"/>
		<exclude name="Squiz.Arrays.ArrayBracketSpacing.SpaceBeforeBracket"/>
		<exclude name="Squiz.NamingConventions.ValidVariableName.MemberNotCamelCaps"/>
		<exclude name="Squiz.NamingConventions.ValidFunctionName.NotCamelCaps"/>
		<exclude name="Squiz.NamingConventions.ValidVariableName.NotCamelCaps"/>
		<exclude name="Squiz.NamingConventions.ValidVariableName.StringNotCamelCaps"/>
		<!--WordPress Override-->
	</rule>

	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing.ExtraSpaceBeforeOpenParenthesis"/>
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing.OpenBraceNotSameLine"/>
		<exclude name="WordPress.WhiteSpace.PrecisionAlignment.Found"/>
		<exclude name="WordPress.WP.GlobalVariablesOverride.Prohibited"/>
	</rule>

	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />

</ruleset>
